datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Participant {
  id              Int      @id @default(autoincrement())
  hashid          String   @unique
  qrCode          String?
  name            String
  ic              String
  ministry        String
  department      String
  address         String
  postcode        String
  town            String
  state           String
  country         String   @default("Malaysia")
  email           String   @unique
  telephoneNumber String
  category        String
  paymentProof    String?  // URL to the uploaded payment proof
  status          String   @default("Pending") // Pending, Approved, UnderReview, Approved_LO
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt @default(now())
  lastUpdateBy    String?
}

model Receipt {
  id            Int       @id @default(autoincrement())
  invoice       String    @unique
  item          String
  amount        Float     @default(0.00)
  bank          String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt @default(now())
  lastUpdateBy  String?
}

model Admin {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
}

model Attendance {
  id            Int         @id @default(autoincrement())
  participantId Int         
  qrCode        String      
  timestamp     DateTime    @default(now()) // Time the attendance is recorded
  createdAt     DateTime    @default(now())
}

model Visitor {
  id              Int      @id @default(autoincrement())
  name            String
  email           String   @unique
  phoneNumber     String
  organizationType String  // Type of organization (e.g., Government, Private)
  occupationField  String  // Field of occupation (e.g., IT, Education, etc.)
  gender          String   // Male/Female
  yearOfBirth     Int
  state           String
  country         String   @default("Malaysia")
  createdAt       DateTime @default(now())
}
