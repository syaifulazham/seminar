datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Participant {
  id              Int      @id @default(autoincrement())
  name            String
  ic              String
  ministry        String
  department      String
  address         String
  postcode        String
  town            String
  state           String
  email           String  @unique
  telephoneNumber String
  category        String
  paymentProof    String? // URL to the uploaded payment proof
  status          String  @default("Pending") // Pending, Approved, UnderReview
}

model Admin {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
}
